@model Vidly.ViewModels.Customer.ListViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table class="table table-striped table-hover">
    <thead>
    <tr><th>Name</th></tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr><td>@Html.ActionLink(customer.Name, "Details", "Customer", new {id = customer.Id})</td></tr>
        }
    </tbody>
</table>